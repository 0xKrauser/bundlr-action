{
  "name": "bundlr-action",
  "version": "0.0.1",
  "description": "Github action for upload to Arweave through Bundlr Network",
  "main": "src/main.ts",
  "repository": "https://github.com/0xKrauser/bundlr-action.git",
  "author": "krauser@hey.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt --no-cache",
    "test": "jest",
    "mock": "ts-node src/main.ts --inspect",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@bundlr-network/client": "^0.9.9"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.36.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.0.1",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^25.3.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
